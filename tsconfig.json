{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2021",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "types": [
      "vite/client",
      "googlemaps",
      "stripe-v3",
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "resources/js/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./resources/js/*.ts",
    "./resources/js/**/*",
    "./*.js",
    "./nova-components/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "public"
  ]
}
